<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>パスワード再設定</h1>
        <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= hidden_field_tag :email, @user.email %>

        <%= f.label :password, '新規パスワード' %>
        <%= f.password_field :password, placeholder: '半角英数字６〜１６文字' %>

        <%= f.label :password_confirmation, '新規パスワード(再入力)' %>
        <%= f.password_field :password_confirmation, placeholder: 'もう一度パスワードを入力' %>

        <%= f.submit '新規パスワードを登録する。', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>