<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>パスワード再設定</h1>
        <%= form_for(:password_reset , url: password_resets_path) do |f| %>
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email%>
        <%= f.submit 'パスワード再設定用メールを受け取る' class: 'btn btn-primary'%>
        <% end %>
    </div>
</div>