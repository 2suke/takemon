<ul>
  <% @portfolios.each do |portfolio| %>
  <li class='col-md-6'>
    <div class='card'>
      <% if portfolio.images.first.image.url.nil? %>
        <%= image_tag 'gray_noimage.png', class: 'img-fluid', width: '418px', height: '418px' %>
      <% else %>
        <%= image_tag portfolio.images.first.image.url, class: 'img-fluid thumbnail', width: '418px', height: '418px' %>
      <% end %>

      <div class="card-body">
        <h5 class="card-title"><%= portfolio.title %></h5>
        <p class="card-text"><%= portfolio.user.name %>の作品</p>
      </div>

      <div class='card-footer'>
        <div class='float-left'>
          <small class="card-text text-muted"><%= portfolio.updated_at.to_s(:date_jp) %>に最終更新</small><br>
          <small class="card-text text-muted"><%= portfolio.fans.count %>人のファン</small>
        </div>
        <%= link_to "詳細を見る", portfolio_path(portfolio), class: 'btn btn-primary btn-sm float-right' %>
      </div>
    </div>
  </li>
  <% end %>
</ul>
<div class='clearfix'></div>
