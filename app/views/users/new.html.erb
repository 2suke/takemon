<div class="row">
    <div class="col-md-8 offset-md-2">

        <h1>ユーザー登録</h1>

        <%= form_with(model: @user, local: true) do |f| %>

        <%= render 'shared/error_messages', object: @user %>

        <%= f.label :name, "ユーザ名" %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, placeholder: '半角英数字６〜１６文字', class: 'form-control' %>
        <%= f.label :password_confirmation, "パスワード（再入力）" %>
        <%= f.password_field :password_confirmation, placeholder: 'もう一度パスワードを入力', class: 'form-control' %>
        <%= f.submit 'アカウント作成', class:"btn btn-primary" %>

        <% end %>
    </div>
</div>