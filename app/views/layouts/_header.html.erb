<header class="header sticky-top">
    <div class="container">
        <nav class="navbar navbar-default">
            <ul class="nav">
                <li class="nav-item"><a class="navbar-brand nav-item" href="/"><%= image_tag 'logo_image.png', class: 'logo'%></a></li>
            </ul>
            <ul class="nav justify-content-end">
                <% if logged_in? %>
                <li class='nav-item'>
                    <%= button_to '作品を投稿する', { controller: 'portfolios', action: 'new' }, {method: 'get', role: 'button', class:'btn btn-secondary nav-item'} %>
                </li>
                <li class='nav-item'>
                    <button type="button" id="application-menu" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" data-target="#menu_logged_in">
                        <%= current_user.name %>のメニュー
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="application-menu">
                        <%= link_to  "プロフィールと作品を見る", current_user, class: 'dropdown-item' %>
                        <%= link_to  "プロフィールを編集する", edit_user_path(current_user), class: 'dropdown-item' %>
                        <%= link_to  "ユーザーを探す", users_path, class: 'dropdown-item' %>
                        <%= link_to  "お気に入りの作品", favorite_user_path(current_user), class: 'dropdown-item' %>
                        <%= link_to  "ログアウト", login_path, method: :delete, class: 'dropdown-item' %>
                    </div>
                </li>
                <% else %>
                <li class='nav-item'>
                    <button type="button" id="application-menu" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        ログイン
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="application-menu">
                        <%= link_to  "ログイン", login_path, class: 'dropdown-item' %>
                        <%= link_to  "ゲストユーザーでログイン", login_guest_path, class: 'dropdown-item' %>
                        <%= link_to  "アカウントを作成する", new_user_path, class: 'dropdown-item' %>
                    </div>
                </li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>
