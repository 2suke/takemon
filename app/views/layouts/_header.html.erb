<header class="header sticky-top">
    <div class="container">
        <nav class="navbar navbar-default">
            <ul class="nav navbar-nav">
                <li class="nav-item"><a class="navbar-brand navbar-nav" href="/">title logo</a></li>
            </ul>
            <ul class="nav navbar-nav justify-content-end">
                <li>
                    <button type="button" id="application-menu" class="btn btn-secondary" data-toggle="collapse" data-target="#menu">
                        <% if logged_in? %>
                        <%= current_user.name %>
                        <% else %>
                        ログイン
                        <% end %>
                    </button>
                </li>

            </ul>

            <ul id="menu" class="dropdown-menu dropdown-menu-right" aria-labelledby="application-menu">
                <% if logged_in? %>
                <li class="dropdown-item"><%= link_to  "マイページ", current_user %></li>
                <li class="dropdown-item"><%= link_to  "マイページ2", edit_user_path(current_user) %></li>
                <li class="dropdown-item"><%= link_to  "ユーザーを探す", '#' %></li>
                <li class="dropdown-item">Message</li>
                <li class="dropdown-item"><%= link_to  "ログアウト", login_path, method: :delete %></li>
                <% else %>
                <li class="dropdown-item"><%= link_to  "ログイン", login_path %></li>
                <li class="dropdown-item"><%= link_to  "アカウントを作成する", new_user_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>